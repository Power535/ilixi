<!ELEMENT style (fonts, icons, pack)>

<!ELEMENT fonts (buttonFont, defaultFont, inputFont, titleFont) >
	<!ELEMENT buttonFont (file, size, fontStyle*)>
	<!ELEMENT defaultFont (file, size, fontStyle*)>
	<!ELEMENT inputFont (file, size, fontStyle*)>
	<!ELEMENT titleFont (file, size, fontStyle*)>
		<!ELEMENT file (#PCDATA)>
		<!ELEMENT size (#PCDATA)>
		<!ELEMENT fontStyle (#PCDATA)>

<!ELEMENT icons (plus, minus, check, tri-check, radioOff, radioOn)>
<!ATTLIST icons resource CDATA #REQUIRED>
	<!ELEMENT plus EMPTY>
	<!ATTLIST plus x CDATA #REQUIRED>
	<!ATTLIST plus y CDATA #REQUIRED>
	<!ATTLIST plus w CDATA #REQUIRED>
	<!ATTLIST plus h CDATA #REQUIRED>

	<!ELEMENT minus EMPTY>
	<!ATTLIST minus x CDATA #REQUIRED>
	<!ATTLIST minus y CDATA #REQUIRED>
	<!ATTLIST minus w CDATA #REQUIRED>
	<!ATTLIST minus h CDATA #REQUIRED>

	<!ELEMENT check EMPTY>
	<!ATTLIST check x CDATA #REQUIRED>
	<!ATTLIST check y CDATA #REQUIRED>
	<!ATTLIST check w CDATA #REQUIRED>
	<!ATTLIST check h CDATA #REQUIRED>

	<!ELEMENT tri-check EMPTY>
	<!ATTLIST tri-check x CDATA #REQUIRED>
	<!ATTLIST tri-check y CDATA #REQUIRED>
	<!ATTLIST tri-check w CDATA #REQUIRED>
	<!ATTLIST tri-check h CDATA #REQUIRED>

	<!ELEMENT radioOff EMPTY>
	<!ATTLIST radioOff x CDATA #REQUIRED>
	<!ATTLIST radioOff y CDATA #REQUIRED>
	<!ATTLIST radioOff w CDATA #REQUIRED>
	<!ATTLIST radioOff h CDATA #REQUIRED>

	<!ELEMENT radioOn EMPTY>
	<!ATTLIST radioOn x CDATA #REQUIRED>
	<!ATTLIST radioOn y CDATA #REQUIRED>
	<!ATTLIST radioOn w CDATA #REQUIRED>
	<!ATTLIST radioOn h CDATA #REQUIRED>

<!ELEMENT pack (PushButton, CheckBox, RadioButton, ProgressBar, Slider, Frame, LineInput, Tab, ToolButton)>
<!ATTLIST pack resource CDATA #REQUIRED>

	<!ELEMENT PushButton (default, disabled, pressed, exposed, focused)>
	<!ELEMENT CheckBox (default, disabled, pressed, exposed, focused)>
	<!ELEMENT RadioButton (default, disabled, pressed, exposed, focused)>
	<!ELEMENT ProgressBar (default, disabled, indicator)>
	<!ELEMENT Slider (default, disabled, indicator)>
	<!ELEMENT Frame (default, disabled)>
	<!ELEMENT Tab (default, disabled)>
	<!ELEMENT LineInput (default, disabled, pressed, exposed, focused)>
	<!ELEMENT ToolButton (default, disabled, pressed, exposed, focused)>
	<!ELEMENT indicator (default, disabled, pressed?, exposed?, focused?)>

	<!ELEMENT default 	((left) | (left, mid, right) | (top-left, top-mid, top-right, left, mid, right, bottom-left, bottom-mid, bottom-right))>
	<!ELEMENT pressed 	((left) | (left, mid, right) | (top-left, top-mid, top-right, left, mid, right, bottom-left, bottom-mid, bottom-right))>
	<!ELEMENT exposed 	((left) | (left, mid, right) | (top-left, top-mid, top-right, left, mid, right, bottom-left, bottom-mid, bottom-right))>
	<!ELEMENT disabled 	((left) | (left, mid, right) | (top-left, top-mid, top-right, left, mid, right, bottom-left, bottom-mid, bottom-right))>
	<!ELEMENT focused 	((left) | (left, mid, right) | (top-left, top-mid, top-right, left, mid, right, bottom-left, bottom-mid, bottom-right))>

	<!ELEMENT left EMPTY>
	<!ATTLIST left x CDATA #REQUIRED>
	<!ATTLIST left y CDATA #REQUIRED>
	<!ATTLIST left w CDATA #REQUIRED>
	<!ATTLIST left h CDATA #REQUIRED>

	<!ELEMENT mid EMPTY>
	<!ATTLIST mid x CDATA #REQUIRED>
	<!ATTLIST mid y CDATA #REQUIRED>
	<!ATTLIST mid w CDATA #REQUIRED>
	<!ATTLIST mid h CDATA #REQUIRED>

	<!ELEMENT right EMPTY>
	<!ATTLIST right x CDATA #REQUIRED>
	<!ATTLIST right y CDATA #REQUIRED>
	<!ATTLIST right w CDATA #REQUIRED>
	<!ATTLIST right h CDATA #REQUIRED>


	<!ELEMENT top-left EMPTY>
