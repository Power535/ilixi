	<!ATTLIST top-left y CDATA #REQUIRED>
	<!ATTLIST top-left w CDATA #REQUIRED>
	<!ATTLIST top-left h CDATA #REQUIRED>

	<!ELEMENT top-mid EMPTY>
	<!ATTLIST top-mid x CDATA #REQUIRED>
	<!ATTLIST top-mid y CDATA #REQUIRED>
	<!ATTLIST top-mid w CDATA #REQUIRED>
	<!ATTLIST top-mid h CDATA #REQUIRED>

	<!ELEMENT top-right EMPTY>
	<!ATTLIST top-right x CDATA #REQUIRED>
	<!ATTLIST top-right y CDATA #REQUIRED>
	<!ATTLIST top-right w CDATA #REQUIRED>
	<!ATTLIST top-right h CDATA #REQUIRED>


	<!ELEMENT bottom-left EMPTY>
