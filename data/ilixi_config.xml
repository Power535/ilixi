<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Configuration PUBLIC "-//ilixi//DTD Configuration v1//EN" "http://www.ilixi.org/dtd/configuration.dtd">

<Configuration>
	<HardwareLayers>
		<DFBLayer id="0" fsu="off" flipMode="new" bufferMode="backVideo" />
	</HardwareLayers>

	<LogicLayers>
		<Layer name="ui" hwID="0" />
		<Layer name="cursor" hwID="0" />
		<Layer name="video" hwID="0" />
	</LogicLayers>

	<Screen>
		<TvStandard>DIGITAL</TvStandard>
		<OutConnectors>COMPONENT, HDMI</OutConnectors>
		<ScanMode>PROGRESSIVE</ScanMode>
		<Resolution>1280_720</Resolution>
		<Frequency>60HZ</Frequency>
	</Screen>

	<Window>
		<FullScreenUpdate>off</FullScreenUpdate>
		<FlipMode>new</FlipMode>
		<BufferMode>double</BufferMode>
	</Window>

	<Theme>
		<Background>@THEMEDIR:dark/bg.dfiff</Background>
		<FontPack>@THEMEDIR:dark/fonts_en_US.xml</FontPack>
		<IconPack>@THEMEDIR:dark/icons.xml</IconPack>
		<Style>@THEMEDIR:dark/style.xml</Style>
		<Palette>@THEMEDIR:dark/palette.xml</Palette>
	</Theme>

	<Sounds level="100">
		<Sound id="Click">@SOUNDDIR:click.wav</Sound>
		<Sound id="Close">@SOUNDDIR:close.wav</Sound>
		<Sound id="Error">@SOUNDDIR:error.wav</Sound>
		<Sound id="Notification">@SOUNDDIR:notification.wav</Sound>
	</Sounds>

	<Cursor visible="yes" useLayer="yes">@IMGDIR:pointer.png</Cursor>
	
	<PixelFormat>DEFAULT</PixelFormat>
</Configuration>
