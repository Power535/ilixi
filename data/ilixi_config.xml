<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Configuration PUBLIC "-//ilixi//DTD Configuration v2//EN" "http://www.ilixi.org/dtd/configuration.dtd">

<Configuration>
	<HardwareLayers>
		<DFBLayer id="0" fsu="off" flipMode="new" bufferMode="backVideo" />
	</HardwareLayers>

	<LogicLayers>
		<Layer name="ui" hwID="0" />
		<Layer name="cursor" hwID="0" />
		<Layer name="video" hwID="0" />
	</LogicLayers>

	<Screen>
		<TvStandard>DIGITAL</TvStandard>
		<OutConnectors>COMPONENT, HDMI</OutConnectors>
		<ScanMode>PROGRESSIVE</ScanMode>
		<Resolution>1280_720</Resolution>
		<Frequency>60HZ</Frequency>
	</Screen>

	<Window>
		<FullScreenUpdate>off</FullScreenUpdate>
		<FlipMode>new</FlipMode>
		<BufferMode>double</BufferMode>
	</Window>

	<Theme directory="@ILX_THEMEDIR:dark/">
		<Background>bg.dfiff</Background>
		<Style>style.xml</Style>
		<Palette>palette.xml</Palette>
		<FontPack>fonts_en_US.xml</FontPack>
		<IconPack>icons.xml</IconPack>		
	</Theme>

	<Sounds directory="@ILX_SOUNDDIR:" level="100" >
		<Sound id="Click">click.wav</Sound>
		<Sound id="Close">close.wav</Sound>
		<Sound id="Error">error.wav</Sound>
		<Sound id="Notification">notification.wav</Sound>
	</Sounds>

	<Cursor visible="yes" useLayer="yes">@ILX_IMGDIR:pointer.png</Cursor>
	
	<PixelFormat>DEFAULT</PixelFormat>
</Configuration>
