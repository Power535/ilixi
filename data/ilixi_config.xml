<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Configuration PUBLIC "-//ilixi//DTD Configuration v1//EN" "http://www.ilixi.org/dtd/configuration.dtd">

<Configuration>
	<HardwareLayers>
		<DFBLayer id="0" fsu="off" flipMode="none" bufferMode="backVideo" />
	</HardwareLayers>

	<LogicLayers>
		<Layer name="ui" hwID="0" />
		<Layer name="cursor" hwID="0" />
		<Layer name="video" hwID="0" />
	</LogicLayers>

	<Screen>
		<TvStandard>DIGITAL</TvStandard>
		<OutConnectors>COMPONENT, HDMI</OutConnectors>
		<ScanMode>PROGRESSIVE</ScanMode>
		<Resolution>1280_720</Resolution>
		<Frequency>60HZ</Frequency>
	</Screen>

    <Window>
        <FullScreenUpdate>off</FullScreenUpdate>
        <FlipMode>new</FlipMode>
        <BufferMode>double</BufferMode>
    </Window>

	<Theme>
		<Background>@THEMEDIR:dark/bg.dfiff</Background>
		<Style>@THEMEDIR:dark/style.xml</Style>
		<Palette>@THEMEDIR:dark/palette.xml</Palette>
	</Theme>

	<Cursor visible="yes" useLayer="yes">@DATADIR:pointer.png</Cursor>
</Configuration>